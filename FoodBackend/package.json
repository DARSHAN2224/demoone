{
  "name": "foodbackend",
  "version": "1.0.0",
  "description": "Food & Drone Delivery Platform Backend",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node -r ./src/config/dotenvConfig.js src/index.js",
    "dev": "nodemon -r ./src/config/dotenvConfig.js src/index.js",
    "start:all": "concurrently \"npm run dev\" \"cd ../FoodFrontend && npm run dev\"",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:api": "cross-env NODE_ENV=test jest --testPathPattern=api",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=unit",
    "test:e2e": "cross-env NODE_ENV=test jest --testPathPattern=e2e",
    "test:security": "cross-env NODE_ENV=test jest --testPathPattern=security",
    "test:performance": "cross-env NODE_ENV=test jest --testPathPattern=performance",
    "test:middleware": "cross-env NODE_ENV=test jest --testPathPattern=middleware",
    "test:validation": "cross-env NODE_ENV=test jest --testPathPattern=validation",
    "test:websocket": "cross-env NODE_ENV=test jest --testPathPattern=websocket",
    "test:drone": "cross-env NODE_ENV=test jest --testPathPattern=drone",
    "test:auth": "cross-env NODE_ENV=test jest --testPathPattern=auth",
    "test:cleanup": "node tests/cleanup.js",
    "test:setup": "node tests/setup.js",
    "test:seed": "node tests/seed.js",
    "test:report": "jest --coverage --coverageReporters=html --coverageReporters=text",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:udp": "node test-udp-services.js",
    "test:smtp": "node test-smtp-config.js"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.4",
    "socket.io": "^4.7.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "faker": "^6.6.6",
    "jest": "^29.6.2",
    "jest-environment-node": "^29.6.2",
    "mongodb-memory-server": "^9.1.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "testcontainers": "^10.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/test-email.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "testTimeout": 30000,
    "verbose": true,
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "keywords": [
    "food-delivery",
    "drone-delivery",
    "express",
    "mongodb",
    "socket.io",
    "jwt"
  ],
  "author": "Food Delivery Team",
  "license": "MIT"
}
