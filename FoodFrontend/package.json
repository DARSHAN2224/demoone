{
  "name": "foodfrontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:unit": "vitest run --reporter=verbose src/components/**/*.test.jsx",
    "test:integration": "vitest run --reporter=verbose src/stores/**/*.test.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:component": "vitest run --reporter=verbose src/components/**/*.test.jsx",
    "test:store": "vitest run --reporter=verbose src/stores/**/*.test.js",
    "test:utils": "vitest run --reporter=verbose src/utils/**/*.test.js",
    "test:report": "vitest run --coverage --reporter=html",
    "test:ci": "vitest run --coverage --reporter=verbose"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@googlemaps/js-api-loader": "^1.16.2",
    "@googlemaps/react-wrapper": "^1.2.0",
    "@tailwindcss/postcss": "^4.1.12",
    "axios": "^1.11.0",
    "clsx": "^2.1.1",
    "formik": "^2.4.6",
    "jsqr": "^1.4.0",
    "lucide-react": "^0.541.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.8.2",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.0.0",
    "yup": "^1.7.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.39.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "faker": "^6.6.6",
    "globals": "^16.3.0",
    "happy-dom": "^12.10.3",
    "jsdom": "^22.1.0",
    "msw": "^2.0.8",
    "playwright": "^1.39.0",
    "postcss": "^8.5.6",
    "vite": "^7.1.3",
    "vitest": "^0.34.6"
  },
  "vitest": {
    "environment": "jsdom",
    "setupFiles": [
      "./src/test/setup.js"
    ],
    "globals": true,
    "css": true,
    "coverage": {
      "provider": "v8",
      "reporter": [
        "text",
        "html",
        "lcov"
      ],
      "exclude": [
        "node_modules/",
        "src/test/",
        "**/*.d.ts",
        "**/*.config.js",
        "**/*.config.ts"
      ]
    },
    "test": {
      "globals": true,
      "environment": "jsdom",
      "setupFiles": [
        "./src/test/setup.js"
      ]
    }
  }
}
