# =============================================================================
# FOOD APP - COMPLETE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and customize the values for your environment

# =============================================================================
# BACKEND SERVER CONFIGURATION
# =============================================================================
PORT=8000
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URL=mongodb://127.0.0.1:27017/food-drone

# =============================================================================
# CORS CONFIGURATION (Industry Standard)
# =============================================================================
CORS_ORIGIN=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# =============================================================================
# JWT CONFIGURATION (Industry Standard)
# =============================================================================
ACCESS_TOKEN_SECRET=your_super_secret_access_token_key_here
ACCESS_TOKEN_EXPIRY=1d
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_key_here
REFRESH_TOKEN_EXPIRY=7d

# =============================================================================
# CLOUDINARY CONFIGURATION
# =============================================================================
CLOUDINARY_NAME=your_cloudinary_name
CLOUDINARY_SECRET=your_cloudinary_secret
CLOUDINARY_KEY=your_cloudinary_key

# =============================================================================
# EMAIL CONFIGURATION (Industry Standard)
# =============================================================================
SMTP_MAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true

# =============================================================================
# VAPID KEYS FOR PUSH NOTIFICATIONS (Industry Standard)
# =============================================================================
VAPID_PUBLIC_KEY=your_public_vapid_key_here
VAPID_PRIVATE_KEY=your_private_vapid_key_here
VAPID_EMAIL=noreply@foodapp.com

# =============================================================================
# API KEYS
# =============================================================================
BACKEND_URL=http://localhost:8000/api/v1
OPENWEATHER_API_KEY=your_openweather_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
# Frontend (Vite) Google Maps key
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =============================================================================
# SECURITY CONFIGURATION (Industry Standard)
# =============================================================================
SESSION_SECRET=your_session_secret_key_here
COOKIE_SECRET=your_cookie_secret_key_here

# =============================================================================
# RATE LIMITING (Industry Standard)
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FILE UPLOAD LIMITS (Industry Standard)
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# =============================================================================
# LOGGING CONFIGURATION (Industry Standard)
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# =============================================================================
# DRONE BRIDGE CONFIGURATION
# =============================================================================

# === Drone Home Position ===
# Set the home/launch position for drones (default: Seattle)
DRONE_HOME_LAT=47.6414678
DRONE_HOME_LNG=-122.1401649

# === Initial Drone State ===
# Set initial values when drone starts
DRONE_INITIAL_BATTERY=100.0
DRONE_INITIAL_VOLTAGE=12.6
DRONE_INITIAL_TEMP=25.0

# === Battery Simulation ===
# Configure how battery behaves during simulation
DRONE_BATTERY_DRAIN_RATE=0.02
DRONE_BATTERY_CHARGE_RATE=0.2
DRONE_BASE_TEMP=25.0

# === Mission Simulation ===
# Configure mission behavior and simulation parameters
DRONE_SIM_SPEED=15.0
DRONE_REACH_TOLERANCE=2.0
DRONE_ALT_ADJUST_RATE=0.1
DRONE_SIM_INTERVAL=0.5
DRONE_DEFAULT_ALTITUDE=30.0

# === Weather Simulation ===
# Configure weather behavior (realistic, random, static)
WEATHER_PATTERN=realistic
WEATHER_BASE_WIND=3.0
WEATHER_BASE_RAIN=0.1
WEATHER_CYCLE_TIME=3600.0

# === MAVSDK Configuration ===
# Configure MAVSDK connection parameters
MAVSDK_CONNECTION_TIMEOUT=10.0
DRONE_DEFAULT_TEMP=25.0

# === Network Configuration ===
# Configure network settings for drone communication
PX4_HOST_IP=172.17.176.1
PX4_BASE_PORT=14540
MAX_DRONES=10
BRIDGE_HTTP_HOST=127.0.0.1
BRIDGE_HTTP_PORT_BASE=8001
MAVSDK_SERVER_PORT_BASE=50041

# === Bridge WebSocket toggle ===
# Disable backend WS client to drone bridge when not used
DRONE_BRIDGE_ENABLE_WS=false

# === Safety Parameters ===
# Configure safety thresholds for drone operations
BATTERY_MIN_PERCENT_TAKEOFF=30.0
RETURN_BATTERY_PERCENT_RTL=20.0
WIND_MAX_M_S=10.0
RAIN_MAX=0.7

# =============================================================================
# QUICK SETUP INSTRUCTIONS
# =============================================================================
# 1. Copy this file: cp env.example .env
# 2. Update the values above with your actual configuration
# 3. For drone home position, use your city's coordinates
# 4. For weather, choose: realistic (recommended), random, or static
# 5. Adjust battery drain rates based on your testing needs
# 6. Set mission parameters for your preferred simulation speed
# =============================================================================